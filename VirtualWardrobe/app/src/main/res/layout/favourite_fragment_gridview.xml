<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
    <GridView
        android:id="@+id/favouriteGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:numColumns="2" />



        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddFavouritePhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            fab:fab_colorNormal="#DA4336"
            fab:fab_colorPressed="#E75043"
            fab:fab_colorRipple="#99FFFFFF"
            fab:fab_showShadow="true"
            fab:fab_shadowColor="#66000000"
            fab:fab_showAnimation="@anim/show_from_bottom"
            fab:fab_hideAnimation="@anim/hide_to_bottom"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_action_new"
            fab:fab_size="normal"
            fab:fab_label="Add Photos" />



</RelativeLayout>