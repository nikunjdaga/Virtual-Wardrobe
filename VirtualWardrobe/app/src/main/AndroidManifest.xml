<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikunj.virtualwardrobe" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainViewPager"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GalleryPhoto"
            android:label="@string/title_activity_gallery_photo" >
        </activity>
        <activity
            android:name=".CameraPhoto"
            android:label="@string/title_activity_camera_photo" >
        </activity>
        <activity
            android:name=".GetCroppedPhoto"
            android:label="@string/title_activity_get_cropped_photo" >
        </activity>
        <activity
            android:name=".PhotosViewPager"
            android:label="@string/title_activity_photos_view_pager_class" >
        </activity>
        <activity
            android:name=".CollectionsPhotosViewPager"
            android:label="@string/title_activity_collections_photos_view_pager" >
        </activity>
        <activity
            android:name=".ColorPhotosViewPager"
            android:label="@string/title_activity_color_photos_view_pager" >
        </activity>
    </application>

</manifest>
